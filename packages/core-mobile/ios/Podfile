# to prevent error "Unable to find a specification for `React-hermes` depended upon by `RNSentry`"
ENV['USE_HERMES'] = '0'

use_modular_headers!

# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

prepare_react_native_project!

platform :ios, '14'

is_local_build = ENV['CI'] != 'true'
perf_enabled = ENV['PERF_ENABLED'] == 'true'

# enable Flipper for local builds or if PERF_ENABLED env var is set
# flipper_enabled = is_local_build || perf_enabled
flipper_enabled = false

if flipper_enabled
  flipper_config = FlipperConfiguration.enabled(["Debug", "Release"], { 'Flipper' => '0.163.0' })
else
  flipper_config = FlipperConfiguration.disabled
end

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

abstract_target 'common' do
  # put common target configuration here
  config = use_native_modules!

  # Flags change depending on the env values.
  flags = get_default_flags()

  use_react_native!(
    :path => config[:reactNativePath],
    # Enables or disables Hermes; if flag is omitted Hermes will be enabled by default.
    :hermes_enabled => false,
    :fabric_enabled => flags[:fabric_enabled],
    # Enables/disables Flipper
    :flipper_configuration => flipper_config,
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  pod 'RNFS', :path => '../node_modules/react-native-fs'
  permissions_path = '../node_modules/react-native-permissions/ios'
  pod 'Permission-Camera', :path => "#{permissions_path}/Camera"

  # specify OpenSSL version explicitly due to https://github.com/margelo/react-native-quick-crypto/issues/189
  pod "OpenSSL-Universal", "1.1.1100"
  
  target 'AvaxWallet' do
  end
  
  target 'AvaxWalletInternal' do
  end

  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )
  
    installer.pods_project.targets.each do |target|
      # https://github.com/facebook/react-native/issues/34106#issuecomment-1417685116
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14'
      end
  
      if flipper_enabled
        # By default, Flipper is enabled only for React-Core Debug configuration
        # The following is needed to have it enabled for the Release configuration
        if target.name == 'React-Core'
          target.build_configurations.each do |config|
            if config.name == 'Release'
              config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] = ['$(inherited)', 'FB_SONARKIT_ENABLED=1']
            end
          end
        end  
  
        # react-native-flipper hardcodes the FB_SONARKIT_ENABLED flag no matter what the build configuration is
        # this is needed to make sure it dynamically sets the flag based on our flipper_enabled var
        if target.name == 'react-native-flipper'
          target.build_configurations.each do |config|
            config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] = ['$(inherited)', 'FB_SONARKIT_ENABLED=1']
          end
        end  
      end  
    end 
  end
  
end


