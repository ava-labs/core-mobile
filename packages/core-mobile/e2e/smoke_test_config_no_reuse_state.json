{
  "maxWorkers": 1,
  "testEnvironment": "detox/runners/jest/testEnvironment",
  "testRunner": "jest-circus/runner",
  "testTimeout": 120000,
  "rootDir": "..",
  "testMatch": ["<rootDir>/e2e/tests/**/*.e2e.smoke.ts"],
  "reporters": ["detox/runners/jest/reporter"],
  "verbose": true,
  "globalTeardown": "./e2e/sendResultsTeardown.ts",
  "globalSetup": "detox/runners/jest/globalSetup",
  "transformIgnorePatterns": [
    "node_modules/(?!(jest-)?react-native|@react-native-community|@react-native|@react-navigation)"
  ],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "babelConfig": "babel.config.js"
      }
    ]
  },
  "testPathIgnorePatterns": [
    "*/bridge/*.ts",
    "traderjoe.e2e.ts",
    "sendSepoliaEthTo2ndAccount.e2e.ts",
    "sendEthTo2ndAccount.e2e.ts"  
  ]
}