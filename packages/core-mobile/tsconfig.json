{
  "extends": "@avalabs/tsconfig-mobile/base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./app",
    "paths": {
      "tests/*": [
        "../tests/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "*.d.ts",
    "./.storybook/*.js",
    ".eslintrc.js",
    "jest.config.js",
    ".prettierrc.js",
    "../k2-mobile/src/theme.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./e2e/artifacts/*",
    "./ios/DerivedData"
  ]
}
