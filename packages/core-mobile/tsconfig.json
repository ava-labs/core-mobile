{
  "extends": "@avalabs/tsconfig-mobile/base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./app",
    "paths": {
      "tests/*": ["../tests/*"],
      "features/*": ["new/features/*"],
      "common/*": ["new/common/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "./.storybook/*.js",
    ".eslintrc.js",
    "jest.config.js",
    ".prettierrc.js",
    "./index.d.ts",
    "./declarations.d.ts",
    "../k2-alpine/src/theme.d.ts",
    "../k2-alpine/src/components/Video/Video.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules", "./e2e/artifacts/*", "./ios/DerivedData", "e2e/*"]
}
