require_relative '../node_modules/react-native/scripts/react_native_pods'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'

platform :ios, '14'
install! 'cocoapods', :deterministic_uuids => false

is_local_build = ENV['CI'] != 'true'
perf_enabled = ENV['PERF_ENABLED'] == 'true'

# enable Flipper for local builds or if PERF_ENABLED env var is set
flipper_enabled =  is_local_build || perf_enabled

if flipper_enabled
  flipper_config = FlipperConfiguration.enabled(["Debug", "Release"], { 'Flipper' => '0.163.0' })
else
  flipper_config = FlipperConfiguration.disabled
end

abstract_target 'common' do
  # put common target configuration here
  config = use_native_modules!

  # Flags change depending on the env values.
  flags = get_default_flags()

  use_react_native!(
    :path => config[:reactNativePath],
    # Enables or disables Hermes; if flag is omitted Hermes will be enabled by default.
    :hermes_enabled => false,
    :fabric_enabled => flags[:fabric_enabled],
    # Enables/disables Flipper
    :flipper_configuration => flipper_config,
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  pod 'RNFS', :path => '../node_modules/react-native-fs'

  permissions_path = '../node_modules/react-native-permissions/ios'
  pod 'Permission-Camera', :path => "#{permissions_path}/Camera"

  target 'AvaxWallet' do
  end
  
  target 'AvaxWalletInternal' do
  end
end


post_install do |installer|
  react_native_post_install(
    installer,
    # Set `mac_catalyst_enabled` to `true` in order to apply patches
    # necessary for Mac Catalyst builds
    :mac_catalyst_enabled => false
  )
  __apply_Xcode_12_5_M1_post_install_workaround(installer)

  installer.pods_project.targets.each do |target|
    if flipper_enabled
      # By default, Flipper is enabled only for React-Core Debug configuration
      # The following is needed to have it enabled for the Release configuration
      if target.name == 'React-Core'
        target.build_configurations.each do |config|
          if config.name == 'Release'
            config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] = ['$(inherited)', 'FB_SONARKIT_ENABLED=1']
          end
        end
      end  

      # react-native-flipper hardcodes the FB_SONARKIT_ENABLED flag no matter what the build configuration is
      # this is needed to make sure it dynamically sets the flag based on our flipper_enabled var
      if target.name == 'react-native-flipper'
        target.build_configurations.each do |config|
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] = ['$(inherited)', 'FB_SONARKIT_ENABLED=1']
        end
      end  
    end  
  end 
end
